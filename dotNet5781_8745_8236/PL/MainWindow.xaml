<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Open Window" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="ManagerBtn" Height="50" Width="300" FontSize="30" Content="Manager" Grid.Row="0" Grid.RowSpan="2" Click="OpenManagerOptions"/>
        <Button x:Name="UserBtn" Height="50" Width="300" FontSize="30" Content="User" Grid.Row="1" Grid.RowSpan="2" Click="OpenUserOptions"/>
        <Button x:Name="ExitBtn" Height="50" Width="300" FontSize="30" Content="Exit" Grid.Row="2" Grid.RowSpan="2" Click="Exit"/>

        <Button x:Name="BusesBtn" Height="50" Width="300" FontSize="30" Content="Buses" Grid.Row="0" Click="ShowBuses" Visibility="Collapsed"/>
        <Button x:Name="LinesBtn" Height="50" Width="300" FontSize="30" Content="Lines" Grid.Row="1" Click="ShowLines" Visibility="Collapsed"/>
        <Button x:Name="StationsBtn" Height="50" Width="300" FontSize="30" Content="Stations" Grid.Row="2" Click="ShowStations" Visibility="Collapsed"/>
        <Button x:Name="BackBtn" Height="50" Width="300" FontSize="30" Content="Back" Grid.Row="3" Click="Back" Visibility="Collapsed"/>
    </Grid>
</Window>
