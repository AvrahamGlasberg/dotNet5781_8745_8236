<Window x:Class="PL.StationsPresentaion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationsPresentaion" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ListBox x:Name="StationsListBox" ItemsSource="{Binding}" SelectionChanged="ListBox_SelectionChanged" Grid.Row="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label x:Name="Station" Content="{Binding}" Width="500"/>
                        <Button Content="Delete" Click="DeleteStation" Height="50" Width="100"/>
                        <Button Content="Update" Height="50" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="BackBtn" Height="50" Width="300" FontSize="30" Content="Back" Click="Back" Grid.Row="1"/>
    </Grid>
</Window>
