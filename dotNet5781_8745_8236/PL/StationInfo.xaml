<Window x:Class="PL.StationInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationInfo" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="LinesDataTemplate">
            <StackPanel Orientation="Horizontal">
                <Label Content="Line:"/>
                <Label Content="{Binding Path=LineNumber}" Width="auto" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                <Label Content="Destination:"/>
                <Label Content="{Binding Path=EndStation.Name}" Width="auto" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
            </StackPanel>
        </DataTemplate>

        <local:GeoCoordinateToLocationConvertor x:Key="geoCoordinateToLocationConvertor" />
    </Window.Resources>
    
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Label Content="code:" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="30, 0, 0, 0"/>
            <TextBox Text = "{Binding Path=Code}" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Label Content="name:" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="30, 0, 0, 0"/>
            <TextBox Text = "{Binding Path=Name, Mode=TwoWay}" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" TextChanged="ChangeText"/>
        </StackPanel>


        <m:Map CredentialsProvider="bwOhJg6YwpN98Xgc2JuL~DL5wkcHgZLByzO6IGWylrQ~AniHokr5tXQwCq0pybZ0fbJWzSekZ-ppx-hhb2kkcc4z8wDZ32sz-fC-TeJU5QzN" x:Name="MyMap" Center="{Binding Path=Position, Converter={StaticResource geoCoordinateToLocationConvertor}}" ZoomLevel="16.000" MouseDoubleClick="Map_Double_click" Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="15, 15, 15, 15">
            <m:Pushpin x:Name="Pin" Location="{Binding Path=Position, Converter={StaticResource geoCoordinateToLocationConvertor}, Mode=TwoWay}" />
        </m:Map>
        <ListBox x:Name="ManagerListBox" ItemsSource="{Binding}" Grid.Row="0" Grid.RowSpan="5" Grid.Column="2" ItemTemplate ="{StaticResource LinesDataTemplate}">
            
        </ListBox>
        <Button x:Name="UpdateBtn" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" Content="Update" IsEnabled="False" Width="150" Height="50" FontSize="30" Click="Update"/>
    </Grid>
</Window>
